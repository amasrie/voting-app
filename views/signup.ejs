<% include header.ejs %>

<div class="row panel-top-margin">
	<div class="col-md-6 col-md-offset-3">
		<% if(error){ %>
			<div class="alert alert-dismissable alert-danger">
				<i class="ti ti-alert danger"></i>&nbsp; <%= error %>
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			</div>
		<% } %>	
		<div class="panel panel-info">
			<div class="panel-heading">
				<h2>Sign up</h2>
			</div>
			<form action="/signup" id="signupForm" name="signupForm" method="post" class="form-horizontal">
				<div class="panel-body">				
					<div class="form-group mb-md">
						<label for="FullName" class="col-xs-4 control-label">Full Name</label>
                        <div class="col-xs-8">
                        	<input type="text" class="form-control" name="fullName" id="FullName" placeholder="Full Name" required>
                        </div>
                       
					</div>
					<div class="form-group mb-md">
						<label for="Email" class="col-xs-4 control-label">Email</label>
                        <div class="col-xs-8">
                        	<input type="text" class="form-control" name="email" id="Email" placeholder="Email" required>
                        </div>
					</div>
					<div class="form-group mb-md">
						<label for="Password" class="col-xs-4 control-label">Password</label>
                        <div class="col-xs-8">
                        	<input type="password" class="form-control" name="password" id="Password" placeholder="Password" required>
                        </div>
					</div>
					<div class="form-group mb-md">
						<label for="ConfirmPassword" class="col-xs-4 control-label">Confirm</label>
                        <div class="col-xs-8">
                        	<input type="password" class="form-control" name="confirmPassword" id="ConfirmPassword" placeholder="Confirm Password" required>
                        </div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="clearfix">
						<a href="#" onclick="reset('signupForm')" class="btn btn-default pull-left">Clear Form</a>
						<a href="#" onclick="submitForm('signupForm')" class="btn btn-primary pull-right">Sign up</a>
					</div>
				</div>

					
			</form>				
		</div>
	</div>
</div>

<% include footer.ejs %>