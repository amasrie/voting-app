<% include header.ejs %>

<div class="row panel-top-margin">
	<div class="col-md-4 col-md-offset-4">
		<% if(error){ %>
			<div class="alert alert-dismissable alert-danger">
				<i class="ti ti-alert danger"></i>&nbsp; <%= error %>
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			</div>
		<% } %>
		<div class="panel panel-info">
			<div class="panel-heading">
				<h2>Sign in</h2>
			</div>			
			<form action="/signin" id="signinForm" name="signinForm" method="post" class="form-horizontal" id="validate-form">
				<div class="panel-body">

					<div class="form-group mb-md">
                        <div class="col-xs-12">
                        	<div class="input-group">							
								<span class="input-group-addon">
									<i class="ti ti-user"></i>
								</span>
								<input type="text" class="form-control" name="email" placeholder="Email" required>
							</div>
                        </div>
					</div>

					<div class="form-group mb-md">
                        <div class="col-xs-12">
                        	<div class="input-group">
								<span class="input-group-addon">
									<i class="ti ti-key"></i>
								</span>
								<input type="password" class="form-control" name="password" placeholder="Password">
							</div>
                        </div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="clearfix">
						<a href="#" onclick="reset('signinForm')" class="btn btn-default pull-left">Clear</a>
						<a href="#" onclick="submitForm('signinForm')" class="btn btn-primary pull-right">Sign in</a>
					</div>
				</div>

			</form>
		</div>

	</div>
</div>

<% include footer.ejs %>